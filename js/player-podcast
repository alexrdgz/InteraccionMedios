var liElements = document.querySelectorAll("li");

// Agregar un evento de escucha a cada elemento li
liElements.forEach(function (li) {
  // Obtener el elemento audio correspondiente a este li
  var audio = li.querySelector("audio");

  // Agregar un evento de clic al elemento li
  li.addEventListener("click", function () {
    // Detener cualquier otra reproducción de audio que se esté reproduciendo
    liElements.forEach(function (otherLi) {
      var otherAudio = otherLi.querySelector("audio");
      if (otherAudio != audio) {
        otherAudio.pause();
      }
    });

    // Reproducir el audio correspondiente a este li
    audio.play();
  });
});
